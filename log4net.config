<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <log4net>
        <!-- Rolling File Appender -->
        <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
            <!-- The log file will be created in the 'Logs' directory -->
            <file value="Logs/UnitTest.log" />

            <!-- Append to the file if it already exists -->
            <appendToFile value="true" />

            <!-- Rolling style: based on Date -->
            <rollingStyle value="Date" />

            <!-- Log file name pattern (using date format) -->
            <datePattern value="yyyyMMdd'.log'" />

            <!-- Don't use static file name, use rolling style instead -->
            <staticLogFileName value="false" />

            <!-- Log format pattern -->
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
            </layout>
        </appender>

        <!-- Root logger configuration -->
        <root>
            <level value="INFO" /> <!-- Set log level to INFO (can be DEBUG, WARN, ERROR, etc.) -->
            <appender-ref ref="RollingFileAppender" />
        </root>
    </log4net>
</configuration>
